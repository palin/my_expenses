%nav.navbar.navbar-default{:role => "navigation"}
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} My Expenses List
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.avatar-name
          = image_tag "http://graph.facebook.com/#{current_user.uid}/picture"
          = current_user.name
        %li.all-expenses-link{class: @expense.blank? ? 'active' : ''}
          = image_tag "list.png", alt: "My expenses list"
          = link_to "My expenses list", expenses_path
