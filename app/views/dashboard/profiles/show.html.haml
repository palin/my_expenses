%p
  %table.table
    %tr
      %td.header.col-sm-2.header= "#{translate('name')}"
      %td
        %table
          %tr
            %td= @profile.name
          %tr
            %td.caption Your friends want to recognize you
    %tr
      %td.header.col-sm-2= "#{translate('email')}"
      %td
        %table
          %tr
            %td= @profile.email
          %tr
            %td.caption Make sure the email is correct and up-to-date
    %tr
      %td.header.col-sm-2= "#{translate('gender')}"
      %td= @profile.gender
    %tr
      %td.col-sm-2
      %td
        = link_to(edit_dashboard_profile_path, class: 'btn btn-info btn-lg') do
          = translate('edit_link')
          %span.glyphicon.glyphicon-pencil{'aria-hidden' => true}