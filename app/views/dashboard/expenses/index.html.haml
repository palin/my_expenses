%table.table.table-bordered.table-hover.row
  %thead
    %th #
    %th= t('dashboard.expenses.index_group.table_headers.payed_at')
    %th= t('dashboard.expenses.index_group.table_headers.price')
    %th= t('dashboard.expenses.index_group.table_headers.name')
    %th= t('dashboard.expenses.index_group.table_headers.description')
    %th= t('dashboard.expenses.index_group.table_headers.category')
    %th= t('dashboard.expenses.index_group.table_headers.created_at')

  - @expenses.each_with_index do |ex, i|
    %tr
      %td= i + 1
      %td= ex.payed_at.to_date
      %td= ex.price
      %td= ex.name
      %td= ex.description
      %td= ex.category.name if ex.category
      %td= ex.created_at.strftime("%Y-%m-%d %H:%M")
      %td.edit
        = link_to(edit_dashboard_expense_path(ex), class: 'btn btn-info') do
          = t('dashboard.expenses.index_group.table_links.edit')
          %span.glyphicon.glyphicon-pencil{'aria-hidden' => true}
      %td.delete
        = link_to(dashboard_expense_path(ex), method: :delete, data: { confirm: t('dashboard.expenses.index_group.table_links.delete_confirmation') }, class: 'btn btn-danger') do
          = t('dashboard.expenses.index_group.table_links.delete')
          %span.glyphicon.glyphicon-remove{'aria-hidden' => true}
