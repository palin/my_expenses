= simple_form_for [:dashboard, @expense], html: { class: 'form-horizontal row col-xs-12' } do |f|
  .payed_at.form-group
    %label.col-sm-2.control-label{for: "expense_payed_at"} Payed at
    .col-sm-10= f.input :payed_at, as: :string, placeholder: 'Payed at', label: false, input_html: { value: Date.today.strftime, class: 'form-control' }

  .price.form-group
    %label.col-sm-2.control-label{for: "expense_price"} Price
    .col-sm-10= f.input :price, label: false, input_html: { class: 'form-control' }

  .category.form-group
    %label.col-sm-2.control-label{for: "expense_category"} Category
    .col-sm-10= f.input :category, as: :select, collection: Category.all, label: false, input_html: { class: 'form-control' }

  .name.form-group
    %label.col-sm-2.control-label{for: "expense_name"} Name
    .col-sm-10= f.input :name, label: false, input_html: { class: 'form-control' }

  .description.form-group
    %label.col-sm-2.control-label{for: "expense_description"} Description
    .col-sm-10= f.input :description, label: false, input_html: { class: 'form-control' }

  .save.form-group
    .col-sm-offset-2.col-sm-10
      = f.button :submit, value: 'Save', class: 'btn btn-primary'
